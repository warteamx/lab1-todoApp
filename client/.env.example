# Example environment variables for Client (Expo)
# Copy to .env and customize for your environment

# ============================================
# VERSION CONFIGURATION
# ============================================
# These variables are injected during build time for version tracking

# Application version (semantic versioning)
EXPO_PUBLIC_APP_VERSION=1.1.1

# Build number (incremented by CI/CD)
EXPO_PUBLIC_BUILD_NUMBER=1

# Build date (ISO format, set during build)
EXPO_PUBLIC_BUILD_DATE=2025-09-04T00:00:00.000Z

# Git commit hash (short, set during build)
EXPO_PUBLIC_COMMIT_HASH=abc123f

# Build environment (development, staging, production)
EXPO_PUBLIC_BUILD_ENV=development

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Required for authentication and data storage

EXPO_PUBLIC_SUPABASE_URL=your_supabase_url_here
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================
# API CONFIGURATION
# ============================================
# Backend API endpoints

EXPO_PUBLIC_API_URL=http://localhost:3000/api
EXPO_PUBLIC_API_TIMEOUT=10000

# ============================================
# DEVELOPMENT CONFIGURATION
# ============================================
# Development and debugging settings

EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug
