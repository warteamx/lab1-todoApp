{
  "name": "lab1-todoapp-server",
  "version": "1.1.2",
  "description": "Node.js server for Todo application with PostgreSQL and Supabase",
  "author": "warteamx",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/warteamx/lab1-todoApp.git",
    "directory": "server"
  },
  "homepage": "https://github.com/warteamx/lab1-todoApp#readme",
  "keywords": [
    "nodejs",
    "express",
    "todo-api",
    "postgresql",
    "supabase",
    "typescript"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "main": "src/server.ts",
  "scripts": {
    "// Development Scripts": "",
    "dev": "NODE_ENV=development npx dotenvx run -- ts-node-dev -r tsconfig-paths/register src/server.ts",
    "start": "node dist/server.js",
    "// Build Scripts": "",
    "build": "tsc && npx cpx \"src/**/*.yml\" dist/",
    "build:version": "node scripts/build-version.js",
    "// Testing Scripts": "",
    "test": "npx vitest run",
    "test:ci": "npx vitest run --coverage",
    "test:watch": "npx vitest",
    "test:coverage": "npx vitest run --coverage",
    "// Linting & Formatting Scripts": "",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "// Logging Scripts": "",
    "logs:view": "tail -f logs/combined.log | pino-pretty",
    "logs:errors": "tail -f logs/error.log | pino-pretty",
    "// Docker Scripts": "",
    "docker:dev": "./docker.sh dev",
    "docker:prod": "./docker.sh prod",
    "docker:build": "./docker.sh build",
    "docker:stop": "./docker.sh stop",
    "docker:logs": "./docker.sh logs-f",
    "docker:test": "./docker.sh test",
    "docker:clean": "./docker.sh clean"
  },
  "dependencies": {
    "@supabase/supabase-js": "2.52.0",
    "cors": "2.8.5",
    "express": "5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pg": "8.16.3",
    "postgres": "3.4.7",
    "swagger-ui-express": "5.0.1",
    "winston": "^3.17.0",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "1.47.6",
    "@semantic-release/exec": "^7.1.0",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "22.12.0",
    "@types/pg": "8.15.4",
    "@types/supertest": "6.0.3",
    "@types/swagger-ui-express": "4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cpx": "^1.5.0",
    "cross-env": "^10.0.0",
    "dotenv": "17.2.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "supertest": "7.1.3",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-darwin-arm64": "^4.50.0"
  }
}
